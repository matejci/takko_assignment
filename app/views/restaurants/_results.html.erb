<div class="row">
  <div class="col-4 offset-2">
    <h4>Restaurants</h4>
    <br />
  </div>
</div>

  <!-- TODO, move this to helper -->

  <% data.each do |restaurant| %>
    <div class="row">
      <div class="col-8 offset-2">
        <div class="card" style="width: 100%">
          <%= image_tag(restaurant.image, alt: restaurant.image) %>
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <p class="card-text">Categories: <%= restaurant.categories.join(', ') %></p>
            <p class="card-text">Rating: <%= restaurant.rating %></p>
            <p class="card-text">Location: <%= restaurant.location.join(', ') %></p>
            <p class="card-text">Distance: <%= restaurant.distance %></p>
            <p class="card-text">Review count: <%= restaurant.review_count %></p>
            <p class="card-text">Is closed: <%= restaurant.is_closed %></p>
            <p class="card-text">Price: <%= restaurant.price %></p>
            <p class="card-text">Url: <%= link_to(restaurant.name, restaurant.url) %></p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>
      </div>
    </div>
    <br />
  <% end %>
