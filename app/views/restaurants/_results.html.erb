<div class="row">
  <div class="col-4 offset-2">
    <h4>Restaurants</h4>
    <br />
  </div>
</div>

<% data.each do |restaurant| %>
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card" style="width: 100%">
      <div class="row">
          <div class="col-4">
            <%= image_tag(restaurant.image, alt: restaurant.image, class: 'image') %>
          </div>
          <div class="col-4 offset-2">
            <div class="card-body">
              <h5 class="card-title"><%= restaurant.name %></h5>
              <p class="card-text categories">Categories: <%= restaurant.categories.join(', ') %></p>
              <p class="card-text">Rating: <%= restaurant.rating %></p>
              <p class="card-text">Location: <%= restaurant.location.join(', ') %></p>
              <p class="card-text">Distance: <%= format_distance(restaurant.distance) %></p>
              <p class="card-text">Review count: <%= restaurant.review_count %></p>
              <p class="card-text">Is closed: <%= restaurant.is_closed %></p>
              <p class="card-text">Price: <%= restaurant.price %></p>

              <div class="buttons">
                <%= link_to('Discard', '#', class: 'btn btn-danger btn-sm discard', 'data-url': api_preference_path) %>
                <%= link_to('See more', '#', 'data-redirect-to': restaurant.url, class: 'btn btn-primary btn-sm see_more', 'data-url': api_preference_path) %>
              </div>
            </div>
          </div>
      </div>
     </div>
   </div>
  </div>
  <br />
<% end %>
