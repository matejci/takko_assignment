<div id="login_section">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <h3 class="title">Log in</h3>
      <br />
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4"></div>
    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
      <%= form_tag(api_sessions_path(format: :js), method: :post, remote: true) do %>
        <div class="form-group col-12">
          <%= text_field_tag(:email, '', class: 'form-control', id: :email, type: 'email', required: true, placeholder: 'email', autofocus: true) %>
        </div>
        <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <%= text_field_tag(:password, '', class: 'form-control', id: :password, type: 'password', required: true, placeholder: 'password') %>
        </div>
        <br />
        <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
          <%= submit_tag('Login', class: 'btn btn-primary', data: { disable_with: 'Logging in...' }) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
