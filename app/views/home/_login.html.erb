<div class="row">
  <div class=col-12>
    <h3 class="title">Please log in</h3>
    <br />
  </div>
</div>

<div class="row">
  <div class="col-4"></div>
  <div class="col-4">
    <%= form_tag(api_sessions_path(format: :js), method: :post, remote: true) do %>
      <div class="form-group col-12">
        <%= text_field_tag('email', '', class: 'form-control', id: 'receiver_email', type: 'email', required: true, placeholder: 'email', autofocus: true) %>
      </div>
      <div class="form-group col-12">
        <%= text_field_tag('password', '', class: 'form-control', id: 'period_from', type: 'password', required: true, placeholder: 'password') %>
      </div>
      <br />
      <div class="form-group col-12 text-center">
        <%= submit_tag('Login', class: 'btn btn-primary', data: { disable_with: 'Logging in...' }) %>
      </div>
    <% end %>
  </div>
</div>
