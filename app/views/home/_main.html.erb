<div id="main_section" style="display:none;">
  <div class="row">
    <div class=col-12>
      <h3 class="title">Search for restaurants</h3>
      <br />
    </div>
  </div>
  <div class="row">
    <div class="col-4"></div>
    <div class="col-4">
      <%= form_tag(api_search_path(format: :js), method: :post, remote: true, id: "main_form") do %>
        <div class="form-group col-12">
          <%= text_field_tag(:address, '', class: 'form-control', id: :address, placeholder: 'Address', autofocus: true) %>
        </div>
        <div class="form-group col-12">
          <%= text_field_tag(:town, '', id: :town, class: 'form-control', placeholder: 'Town') %>
        </div>
        <div class="form-group col-12">
          <%= text_field_tag(:county, '', id: :county, class: 'form-control', placeholder: 'County/Area') %>
        </div>
        <div class="form-group col-12">
          <%= text_field_tag(:postal_code, '', class: 'form-control', id: :postal_code, placeholder: 'Zip Code') %>
        </div>
        <div class="form-group col-12">
          <%= text_field_tag('search_term', '', class: 'form-control', id: :search_term, placeholder: 'Search for something') %>
        </div>
        <br />
        <div class="form-group col-12 text-center">
          <%= button_tag('Search', class: 'btn btn-primary', data: { disable_with: 'Searching...' }) %>
        </div>
      <% end %>
    </div>
  </div>
</div>