<div id="main_section" style="display:none;">
  <div class="row">
    <div class=col-12>
      <h4 class="title">Search for restaurants</h4>
      <br />
    </div>
  </div>
  <div class="row">
    <div class="col-4"></div>
    <div class="col-4">
      <%= form_tag(api_search_path(format: :js), method: :post, remote: true, id: "search_form") do %>
        <div class="form-group col-12">
          <%= text_field_tag(:address, '', class: 'form-control', id: :address, placeholder: 'Address', autofocus: true) %>
        </div>
        <div class="form-group col-12">
          <%= text_field_tag(:postal_code, '', class: 'form-control', id: :postal_code, placeholder: 'Zip Code') %>
        </div>
        <div class="form-group col-12">
          <%= text_field_tag(:term, '', class: 'form-control', id: :term, placeholder: 'Search for something') %>
        </div>
        <br />
        <div class="form-group col-12 text-center">
          <%= submit_tag('Search', id: 'search_btn', class: 'btn btn-primary', data: { disable_with: 'Searching...' }) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render partial: 'search_results' %>